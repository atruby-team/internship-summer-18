  <!DOCTYPE html>
<html>
<head>
  <title>Sinatra Training</title>
  <meta>
  <link rel="stylesheet" type="text/css" href="/styles/reset.css" />
  <link rel="stylesheet" type="text/css" href="/styles/main.css" />
</head>
<body>
  <header class="page-header">
    <div class="container">
      <div class="logo">
        <a href="#"><img src="/images/logo.oy" alt="logo"></a>
      </div>
      <nav class="nav-bar">
        <ul class="menu-list">
          <li class="menu-item"><a href="#">Home</a></li>
          <li class="menu-item"><a href="/posts">Posts</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <main class="page-main">
    <div class="breadcrumbs">
      <div class="container">
        <ul class="breadcrumbs-list">
          <li class="breadcrumbs-item"><a href="#">Home</a></li>
          <li class="breadcrumbs-item"><a href="/posts">Posts</a></li>
          <li class="breadcrumbs-item"><span>Bài viết số <%= @post['id'] %></span></li>
        </ul>
      </div>
    </div>
    <div class="content">
      <div class="container">
        <div class="content-header clearfix">
          <h1>Bài viết số <%= @post['id'] %></h1>
          <span class="writer">Người viết: <%= @user['name'] %></span>
        </div>
        <div class="content-main">
          <%= @post['content'] %>
        </div>
        <ul class="comment-list">
          <% if @comments.any? %>
            <% @comments.each do |cmt| %>
              <li class="comment-item">
                <div class="comment-header">
                  <span>Comment số <%= cmt['id'] %></span>
                  <form class="delete-cmt" action="/posts/<%= @post['id'] %>/comments/<%= cmt['id'] %>" method='POST'>
                    <input type='hidden' name='_method' value='DELETE'/>
                    <button type='submit'>Xóa</button>
                  </form>
                </div>
                <div class="comment-main">
                  <%= cmt['content']%>
                </div>
              </li>
            <% end %>
          <% else %>
            <p>No comment</p>
          <% end %>
        </ul>
      </div>
    </div>
  </main>
  <footer class="page-footer">
    <div class="container">
      <p class="copy-right">Copyright &copy; 2018 by Nguyễn Quang Dũng<p>
    </div>
  </footer>
</body>
</html>

